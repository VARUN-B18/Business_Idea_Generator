<%- include('../partials/header') %>

<h2>Leaderboard</h2>

<div class="row mt-4">
  <div class="col-md-3">
    <div class="list-group">
      <a href="/student/dashboard" class="list-group-item list-group-item-action">Dashboard</a>
      <a href="/student/profile" class="list-group-item list-group-item-action">Profile</a>
      <a href="/student/results" class="list-group-item list-group-item-action">Results</a>
      <a href="/student/leaderboard" class="list-group-item list-group-item-action active">Leaderboard</a>
      <a href="/student/feedback" class="list-group-item list-group-item-action">Feedback</a>
      <a href="/student/fees" class="list-group-item list-group-item-action">Fees</a>
    </div>
  </div>
  
  <div class="col-md-9">
    <% if (leaderboard.length === 0) { %>
      <div class="alert alert-info">No quiz attempts yet in your standard.</div>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Student Name</th>
            <th>Total Score</th>
            <th>Quizzes Attempted</th>
          </tr>
        </thead>
        <tbody>
          <% leaderboard.forEach((student, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= student.name %></td>
              <td><%= student.totalScore %></td>
              <td><%= student.totalAttempts %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
