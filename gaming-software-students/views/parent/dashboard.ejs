<%- include('../partials/header') %>

<h2>Parent Dashboard</h2>

<div class="row mt-4">
  <div class="col-md-12">
    <h4>My Children</h4>
    <% if (children.length === 0) { %>
      <div class="alert alert-info">No children linked to your account yet.</div>
    <% } else { %>
      <div class="row">
        <% children.forEach(child => { %>
          <div class="col-md-6 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= child.name %></h5>
                <p class="card-text">
                  <strong>Standard:</strong> <%= child.standard %><br>
                  <strong>Section:</strong> <%= child.section %><br>
                  <strong>School:</strong> <%= child.school %>
                </p>
                <a href="/parent/child/<%= child.id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
